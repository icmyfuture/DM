<UserControl
x:Class="DM.Web.SL.Controls.Guide.GuideControl"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
Width="960" Height="460">
  <UserControl.CacheMode>
    <BitmapCache RenderAtScale="1" />
  </UserControl.CacheMode>
  <Grid x:Name="LayoutRoot">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <!--显示当前步骤的内容-->
        <layoutToolkit:Accordion x:Name="contentControl" Width="940" Height="auto" Margin="10,10,10,10"
                             BorderBrush="{StaticResource GuideControl_BorderBrush}" Background="{StaticResource GuideControl_BackgroundBrush}"  />
    </Grid>
</UserControl>