<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseGrid" TargetType="Grid">
        <Setter Property="Background" Value="Black" />
    </Style>
    <!--Main-->
    <Style x:Key="Login_Grid_bg" TargetType="Grid">
        <Setter Property="Background" Value="Black" />
    </Style>
    <!--首页整体背景色-->
    <LinearGradientBrush x:Key="grdMain_BackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="0" />
    </LinearGradientBrush>

    <!--CustomizeCatalogueLayer-->
    <SolidColorBrush x:Key="GridMain_BackgroundBrush" Color="#ff252525"/>

    <LinearGradientBrush x:Key="ArchiveFormatConfigGridMain_BackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Offset="0.996"/>
    </LinearGradientBrush>

    <!--CustomizeCatalogueLayer-->
    <SolidColorBrush x:Key="CustomizeCatalogueLayerGridMain_BackgroundBrush" Color="#ff252525"/>

</ResourceDictionary>
