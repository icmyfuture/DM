<ResourceDictionary
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--全局定义UserControl:GlobalUserControl-->
  <Style x:Key="GlobalUserControl" TargetType="UserControl">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontFamily" Value="Arial,SimSun,MS UI Gothic" />
        <Setter Property="Foreground" Value="White"/>
    </Style>
  <Style TargetType="UserControl" BasedOn="{StaticResource GlobalUserControl}">
    <Setter Property="CacheMode">
      <Setter.Value>
        <BitmapCache RenderAtScale="1" />
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>