              <Border Height="14" VerticalAlignment="Top" Margin="1" CornerRadius="3">
                <Border.Background>
                  <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#5B5D5C" Offset="0" />
