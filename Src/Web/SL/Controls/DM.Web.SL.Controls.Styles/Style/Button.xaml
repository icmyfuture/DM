              <Border CornerRadius="3" Background="Black" BorderBrush="#303030" BorderThickness="1" />
              <Border Height="14" VerticalAlignment="Top" Margin="1" CornerRadius="3">
                <Border.Background>
                  <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#5B5D5C" Offset="0" />
                    <GradientStop Color="#3A3C3B" Offset="1" />
