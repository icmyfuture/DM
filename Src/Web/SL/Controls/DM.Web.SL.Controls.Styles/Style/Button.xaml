              <Border BorderBrush="#0F7195" BorderThickness="1" CornerRadius="2.05" Margin="1" />
              <Ellipse Margin="0,0,0,-20" Height="38" VerticalAlignment="Bottom">
                <Ellipse.Clip>
                  <RectangleGeometry Rect="0,0,500,18" />
                </Ellipse.Clip>
                <Ellipse.Fill>
                  <RadialGradientBrush>
                    <GradientStop Color="#CC12B6EB" Offset="0" />
