<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="DM.Web.SL.Controls.Window.Controls.TaskBarItem" mc:Ignorable="d">
  <Button Style="{StaticResource TaskBar}" x:Name="btnTitle" Click="btnTitle_Click" MouseLeave="btnTitle_MouseLeave"
          BorderThickness="1"  Margin="0 0 5 0">
    <StackPanel Orientation="Horizontal" Width="131" Margin="0,0,0,3">
      <Image x:Name="imgIcoPath" Style="{StaticResource TaskBar_Ico}" Stretch="Fill" />
      <TextBlock VerticalAlignment="Center" x:Name="txtTitle" Margin="4,0,0,0" Text="Hello" />
    </StackPanel>
  </Button>
</UserControl>