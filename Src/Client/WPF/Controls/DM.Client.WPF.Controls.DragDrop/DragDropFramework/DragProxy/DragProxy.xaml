<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="DM.Client.WPF.Controls.DragDrop.DragDropFramework.DragProxy.DragProxy"
    mc:Ignorable="d" d:DesignWidth="196" d:DesignHeight="195"  x:ClassModifier="internal" Background="Beige">
    <Grid x:Name="LayoutRoot" >
    	<ContentControl x:Name="_content" Margin="0" />
        <Border CornerRadius="3" Background="#dc000c" Width="30" Height="22">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" />
            </Border.Effect>
            <TextBlock TextWrapping="Wrap" x:Name="txt" Foreground="White" />
        </Border>
    </Grid>
</UserControl>
