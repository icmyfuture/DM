<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ControlTemplate x:Key="GridSplitter" TargetType="{x:Type GridSplitter}">
		<Grid>
			<Grid.Background>
				<LinearGradientBrush EndPoint="0.8,0.557" StartPoint="0.1,0.557">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FF121212" Offset="1"/>
				</LinearGradientBrush>
			</Grid.Background>
			<Grid Background="{x:Null}" Height="50" VerticalAlignment="Center">
				<Rectangle Fill="#FFFFA400" HorizontalAlignment="Left" Height="5" Margin="0.744,0,0,0" Stroke="{x:Null}" VerticalAlignment="Center" Width="0.5"/>
				<Rectangle Fill="#FFFFA400" HorizontalAlignment="Stretch" Height="11" Margin="0" Stroke="{x:Null}" VerticalAlignment="Center" Width="0.5"/>
				<Rectangle Fill="#FFFFA400" HorizontalAlignment="Right" Height="5" Margin="0,0,0.662,0" Stroke="{x:Null}" VerticalAlignment="Center" Width="0.5"/>
			</Grid>
	
		</Grid>
	
	</ControlTemplate>
</ResourceDictionary>